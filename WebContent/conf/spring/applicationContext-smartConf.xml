<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--  Application context definition  -->
<beans
  default-autowire="no"
  default-lazy-init="false"
  default-dependency-check="none">
  
	<!-- ################################################################### -->
	<!--                       Properties Placeholder                        -->
	<!-- ################################################################### -->  
	<!-- -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>/WEB-INF/smart.conf.properties</value>
			</list>
		</property>
	</bean>
	<!-- repository -->
	<bean id="fileDirectory" class="net.smartworks.util.SmartConfUtil" factory-method="createInstance">
		<property name="fileDirectory"><value>${smart.fileDirectory}</value></property>
	</bean>
</beans>